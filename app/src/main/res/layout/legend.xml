<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <include layout="@layout/title_dialog" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/icon_legend"
                    android:layout_height="@dimen/icon_legend"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="4dp"
                    android:alpha=".5"
                    android:src="@drawable/ic_security"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="8dp"
                    android:text="@string/msg_inactive"
                    android:textAppearance="@style/TextMedium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ProgressBar
                    android:layout_width="@dimen/icon_legend"
                    android:layout_height="@dimen/icon_legend"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="4dp"
                    android:indeterminate="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="8dp"
                    android:text="@string/msg_queue"
                    android:textAppearance="@style/TextMedium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/icon_legend"
                    android:layout_height="@dimen/icon_legend"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_attach_money"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="8dp"
                    android:text="@string/msg_metered"
                    android:textAppearance="@style/TextMedium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivWifiOn"
                    android:layout_width="@dimen/icon_legend"
                    android:layout_height="@dimen/icon_legend"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="4dp"
                    app:tint="?attr/colorOn"
                    android:src="@drawable/ic_signal_wifi_4_bar"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="8dp"
                    android:text="@string/title_unmetered_allowed"
                    android:textAppearance="@style/TextMedium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivLockdownOn"
                    android:layout_width="@dimen/icon_legend"
                    android:layout_height="@dimen/icon_legend"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="4dp"
                    app:tint="?attr/colorOff"
                    android:src="@drawable/ic_outline_lock"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="8dp"
                    android:text="@string/title_lockdown_enabled"
                    android:textAppearance="@style/TextMedium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivWifiOff"
                    android:layout_width="@dimen/icon_legend"
                    android:layout_height="@dimen/icon_legend"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="4dp"
                    app:tint="?attr/colorOff"
                    android:src="@drawable/ic_signal_wifi_off"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="8dp"
                    android:text="@string/title_unmetered_blocked"
                    android:textAppearance="@style/TextMedium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/icon_legend"
                    android:layout_height="@dimen/icon_legend"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_signal_wifi_off"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="8dp"
                    android:text="@string/title_unmetered_disabled"
                    android:textAppearance="@style/TextMedium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivOtherOn"
                    android:layout_width="@dimen/icon_legend"
                    android:layout_height="@dimen/icon_legend"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="4dp"
                    app:tint="?attr/colorOn"
                    android:src="@drawable/ic_signal_cellular_4_bar"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="8dp"
                    android:text="@string/title_metered_allowed"
                    android:textAppearance="@style/TextMedium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivOtherOff"
                    android:layout_width="@dimen/icon_legend"
                    android:layout_height="@dimen/icon_legend"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="4dp"
                    app:tint="?attr/colorOff"
                    android:src="@drawable/ic_signal_cellular_off"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="8dp"
                    android:text="@string/title_metered_blocked"
                    android:textAppearance="@style/TextMedium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/icon_legend"
                    android:layout_height="@dimen/icon_legend"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_signal_cellular_off"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="8dp"
                    android:text="@string/title_metered_disabled"
                    android:textAppearance="@style/TextMedium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivScreenOn"
                    android:layout_width="@dimen/icon_legend"
                    android:layout_height="@dimen/icon_legend"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="4dp"
                    app:tint="?attr/colorOn"
                    android:src="@drawable/ic_perm_identity"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="8dp"
                    android:text="@string/title_interactive_allowed"
                    android:textAppearance="@style/TextMedium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/title_roaming_symbol"
                    android:textAppearance="@style/TextSmall"
                    android:textColor="?attr/colorOff"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="8dp"
                    android:text="@string/title_roaming_blocked"
                    android:textAppearance="@style/TextMedium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivHostAllowed"
                    android:layout_width="@dimen/icon_legend"
                    android:layout_height="@dimen/icon_legend"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="4dp"
                    app:tint="?attr/colorOn"
                    android:src="@drawable/ic_check"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="8dp"
                    android:text="@string/title_host_allowed"
                    android:textAppearance="@style/TextMedium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivHostBlocked"
                    android:layout_width="@dimen/icon_legend"
                    android:layout_height="@dimen/icon_legend"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="4dp"
                    app:tint="?attr/colorOff"
                    android:src="@drawable/ic_close"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="8dp"
                    android:text="@string/title_host_blocked"
                    android:textAppearance="@style/TextMedium"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:text="@string/title_metered"
                android:textAppearance="@style/TextMedium"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>