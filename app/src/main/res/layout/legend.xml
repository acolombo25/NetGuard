<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dialog_spacing">

    <include layout="@layout/title_dialog" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_spacing"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/icon_legend"
                    android:layout_height="@dimen/icon_legend"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/legend_icon_spacing"
                    android:alpha=".5"
                    android:src="@drawable/ic_security" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/legend_text_spacing"
                    android:text="@string/msg_inactive" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ProgressBar
                    android:layout_width="@dimen/icon_legend"
                    android:layout_height="@dimen/icon_legend"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/legend_icon_spacing"
                    android:indeterminate="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/legend_text_spacing"
                    android:text="@string/msg_queue" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/icon_legend"
                    android:layout_height="@dimen/icon_legend"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/legend_icon_spacing"
                    android:src="@drawable/ic_attach_money" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/legend_text_spacing"
                    android:text="@string/msg_metered" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivWifiOn"
                    android:layout_width="@dimen/icon_legend"
                    android:layout_height="@dimen/icon_legend"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/legend_icon_spacing"
                    android:src="@drawable/ic_signal_wifi_4_bar"
                    app:tint="?attr/colorOn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/legend_text_spacing"
                    android:text="@string/title_unmetered_allowed" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivLockdownOn"
                    android:layout_width="@dimen/icon_legend"
                    android:layout_height="@dimen/icon_legend"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/legend_icon_spacing"
                    android:src="@drawable/ic_outline_lock"
                    app:tint="?attr/colorOff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/legend_text_spacing"
                    android:text="@string/title_lockdown_enabled" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivWifiOff"
                    android:layout_width="@dimen/icon_legend"
                    android:layout_height="@dimen/icon_legend"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/legend_icon_spacing"
                    android:src="@drawable/ic_signal_wifi_off"
                    app:tint="?attr/colorOff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/legend_text_spacing"
                    android:text="@string/title_unmetered_blocked" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/icon_legend"
                    android:layout_height="@dimen/icon_legend"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/legend_icon_spacing"
                    android:src="@drawable/ic_signal_wifi_off" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/legend_text_spacing"
                    android:text="@string/title_unmetered_disabled" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivOtherOn"
                    android:layout_width="@dimen/icon_legend"
                    android:layout_height="@dimen/icon_legend"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/legend_icon_spacing"
                    android:src="@drawable/ic_signal_cellular_4_bar"
                    app:tint="?attr/colorOn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/legend_text_spacing"
                    android:text="@string/title_metered_allowed" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivOtherOff"
                    android:layout_width="@dimen/icon_legend"
                    android:layout_height="@dimen/icon_legend"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/legend_icon_spacing"
                    android:src="@drawable/ic_signal_cellular_off"
                    app:tint="?attr/colorOff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/legend_text_spacing"
                    android:text="@string/title_metered_blocked" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/icon_legend"
                    android:layout_height="@dimen/icon_legend"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/legend_icon_spacing"
                    android:src="@drawable/ic_signal_cellular_off" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/legend_text_spacing"
                    android:text="@string/title_metered_disabled" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivScreenOn"
                    android:layout_width="@dimen/icon_legend"
                    android:layout_height="@dimen/icon_legend"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/legend_icon_spacing"
                    android:src="@drawable/ic_perm_identity"
                    app:tint="?attr/colorOn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/legend_text_spacing"
                    android:text="@string/title_interactive_allowed" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/icon_legend"
                    android:layout_height="@dimen/icon_legend"
                    android:layout_margin="@dimen/legend_icon_spacing"
                    style="@style/TextRoaming" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/legend_text_spacing"
                    android:text="@string/title_roaming_blocked" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivHostAllowed"
                    android:layout_width="@dimen/icon_legend"
                    android:layout_height="@dimen/icon_legend"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/legend_icon_spacing"
                    android:src="@drawable/ic_check"
                    app:tint="?attr/colorOn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/legend_text_spacing"
                    android:text="@string/title_host_allowed" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivHostBlocked"
                    android:layout_width="@dimen/icon_legend"
                    android:layout_height="@dimen/icon_legend"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/legend_icon_spacing"
                    android:src="@drawable/ic_close"
                    app:tint="?attr/colorOff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/legend_text_spacing"
                    android:text="@string/title_host_blocked" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/legend_text_spacing"
                android:text="@string/title_metered" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>